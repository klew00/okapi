<?xml version="1.0" encoding="UTF-8"?>
<document xmlns="urn:net:sf:okapi:resource:document" xmlns:ex="urn:extension"
	xmlns:c="urn:net:sf:okapi:resource:content" xmlns:xsi="http://http://www.w3.org/2001/XMLSchema-instance"
	xmlns:skl="urn:net.sf.okapi:resource:skeleton"
	xsi:schemaLocation="urn:net:sf:okapi:resource:document resource-document.xsd urn:net:sf:okapi:resource:content resource-content.xsd">
	<meta-data ex:extension="here">
		<extensions>
			<ex:extension-here />
		</extensions>
	</meta-data>
	<resources>
		<extraction-item>
			<extensions>
				<skl:skl-fragment>First &lt;b&gt;sentence&lt;/b&gt;.[Break]Second sentence.</skl:skl-fragment>
        	</extensions>
            <source>
            	<c:seg>
            		<c:content>
		            	<c:text-run>
		            		<c:text>First </c:text>
		            	</c:text-run>
		            	<c:inline startCode="&lt;b&gt;" endCode="&lt;/b&gt;">
			            	<c:text-run>
			            		<c:text>sentence</c:text>
			            	</c:text-run>
						</c:inline>
		            	<c:text-run>
		            		<c:text>.</c:text>
		            	</c:text-run>
            		</c:content>
            	</c:seg>
            	<c:text-run>
            		<c:text>[Break]</c:text>
            	</c:text-run>
            	<c:seg>
            		<c:content>
            			<c:text-run>
            				<c:text>Second sentence.</c:text>
            			</c:text-run>
            		</c:content>
            	</c:seg>
			</source>
			<target>
			</target>
        </extraction-item>	
	</resources>
</document>