<?xml version="1.0"?> 
<project name="Integration Tests" default="all" basedir="."> 

	<condition property="platform" value="win32-x86">
		<os family="windows"/>
	</condition>
	<condition property="isWindows">
		<os family="windows"/>
	</condition>
	<condition property="platform" value="carbon-macosx">
		<os family="mac"/>
	</condition>
	<condition property="isMac">
		<os family="mac"/>
	</condition>
	<condition property="platform" value="gtk2-linux-x86">
		<os name="Linux" arch="x86"/>
	</condition>
	<condition property="platform" value="gtk2-linux-x86_64">
		<os name="Linux" arch="x86_64"/>
	</condition>
	<condition property="isLinux">
		<or>
			<equals arg1="${platform}" arg2="gtk2-linux-x86"/>
			<equals arg1="${platform}" arg2="gtk2-linux-x86_64"/>
		</or>
	</condition>

	<target name="runtests">

		<delete file="_tests_results.txt"/>
		<delete file="miscellaneous/TransComp_MT.txt.html"/>
		<delete includeEmptyDirs="true" failonerror="false">
			<fileset dir="extraction/test1_out"/>
			<fileset dir="extraction/test2_out"/>
			<fileset dir="miscellaneous/*.out"/>
		</delete>

		<exec executable="java">
		 <arg line="-jar ../dist_${platform}/lib/rainbow.jar -p miscellaneous/XSLT_Test.rnb -x oku_xsltransform -np"/>
		</exec>
		<exec executable="java">
		 <arg line="-jar ../dist_${platform}/lib/rainbow.jar -p miscellaneous/BOM_Add.rnb -x oku_bomconversion -np"/>
		</exec>
		<exec executable="java">
		 <arg line="-jar ../dist_${platform}/lib/rainbow.jar -p miscellaneous/LineBreak_ToDos.rnb -x oku_linebreakconversion -np"/>
		</exec>
		<exec executable="java">
		 <arg line="-jar ../dist_${platform}/lib/rainbow.jar -p miscellaneous/EncConv_Test1.rnb -x oku_encodingconversion -np"/>
		</exec>
		<exec executable="java">
		 <arg line="-jar ../dist_${platform}/lib/rainbow.jar -p miscellaneous/EncConv_Test2.rnb -x oku_encodingconversion -np"/>
		</exec>
		<exec executable="java">
		 <arg line="-jar ../dist_${platform}/lib/rainbow.jar -p miscellaneous/EncConv_Test3.rnb -x oku_encodingconversion -np"/>
		</exec>
		<exec executable="java">
		 <arg line="-jar ../dist_${platform}/lib/rainbow.jar -p miscellaneous/TransComp_Test1.rnb -x oku_transcomparison -np"/>
		</exec>
		<exec executable="java">
		 <arg line="-jar ../dist_${platform}/lib/rainbow.jar -p miscellaneous/URI_decoded.rnb -x oku_uriconversion -np"/>
		</exec>
		<exec executable="java">
		 <arg line="-jar ../dist_${platform}/lib/rainbow.jar -p miscellaneous/URI_encoded_default.rnb -x oku_uriconversion -np"/>
		</exec>
		<exec executable="java">
		 <arg line="-jar ../dist_${platform}/lib/rainbow.jar -p miscellaneous/URI_encoded_default_all_extended.rnb -x oku_uriconversion -np"/>
		</exec>
		<exec executable="java">
		 <arg line="-jar ../dist_${platform}/lib/rainbow.jar -p miscellaneous/URI_encoded_all_but_uri_marks.rnb -x oku_uriconversion -np"/>
		</exec>
		<exec executable="java">
		 <arg line="-jar ../dist_${platform}/lib/rainbow.jar -p miscellaneous/URI_encoded_all_but_uri_marks_and_res.rnb -x oku_uriconversion -np"/>
		</exec>
		<exec executable="java">
		 <arg line="-jar ../dist_${platform}/lib/rainbow.jar -p miscellaneous/SearchReplaceFilter_Test.rnb -x oku_searchandreplace -np"/>
		</exec>
		<exec executable="java">
		 <arg line="-jar ../dist_${platform}/lib/rainbow.jar -p miscellaneous/SearchReplaceNoFilter_Test.rnb -x oku_searchandreplace -np"/>
		</exec>
		<exec executable="java">
		 <arg line="-jar ../dist_${platform}/lib/rainbow.jar -p miscellaneous/SearchReplaceNoFilterRegEx_Test.rnb -x oku_searchandreplace -np"/>
		</exec>
		
		<exec executable="java">
		 <arg line="-jar ../dist_${platform}/lib/rainbow.jar -p extraction/Test1_Extraction.rnb -x oku_extraction -np"/>
		</exec>
		<exec executable="java">
		 <arg line="-jar ../dist_${platform}/lib/rainbow.jar -p extraction/Test1_Translation.rnb -x oku_textrewriting -np"/>
		</exec>
		<exec executable="java">
		 <arg line="-jar ../dist_${platform}/lib/rainbow.jar -p extraction/Test1_Merging.rnb -x oku_merging -np"/>
		</exec>
		
		<exec executable="java">
		 <arg line="-jar ../dist_${platform}/lib/rainbow.jar -p extraction/Test2_Extraction.rnb -x oku_extraction -np"/>
		</exec>
		<exec executable="java">
		 <arg line="-jar ../dist_${platform}/lib/rainbow.jar -p extraction/Test2_Translation.rnb -x oku_textrewriting -np"/>
		</exec>
		<exec executable="java">
		 <arg line="-jar ../dist_${platform}/lib/rainbow.jar -p extraction/Test2_Merging.rnb -x oku_merging -np"/>
		</exec>

	</target>
	
	<target name="winCompare" if="isWindows">
		<exec executable="comp" output="_tests_results.txt">
		 <arg line="miscellaneous/*.out miscellaneous/*.gold"/>
		</exec>
		<exec executable="comp" output="_tests_results.txt" append="true">
		 <arg line="extraction/test1_out/done/*.* extraction/test1_gold/*.*"/>
		</exec>
		<exec executable="comp" output="_tests_results.txt" append="true">
		 <arg line="extraction/test2_out/done/*.* extraction/test2_gold/*.*"/>
		</exec>
	</target>
	
	<target name="all" depends="runtests, winCompare"/>

</project>
