<?xml version="1.0"?> 
<project name="samples" default="all" basedir="."> 

	<path id="mainClassPath">
		<pathelement location="../../lib/okapilib.jar"/>
	</path>

	<target name="all">
		<delete includeEmptyDirs="true" failonerror="false">
			<fileset dir="tmp"/>
		</delete>
		<mkdir dir="tmp"/>

 		<javac srcdir="." destdir="tmp" classpathref="mainClassPath"/> 

		<delete file="Main.jar"/>
		<manifest file="MANIFEST.MF">
			<attribute name="Main-Class" value="Main"/>
  		</manifest>

		<jar jarfile="Main.jar" basedir="tmp" manifest="MANIFEST.MF"/>
  		
		<delete file="MANIFEST.MF"/>
		<delete includeEmptyDirs="true" failonerror="false">
			<fileset dir="tmp"/>
		</delete>
 		
	</target>

</project>
