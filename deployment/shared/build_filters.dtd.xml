<?xml version="1.0"?>
<project name="filters.dtd" default="filters.dtd"> 

	<property name="proj_filters.dtd" value="../../filters/net.sf.okapi.filters.dtd"/> 
	<property name="src_filters.dtd" value="${proj_filters.dtd}/src"/> 
	<property name="lib_filters.dtd" value="${proj_filters.dtd}/lib"/> 
 
	<path id="mainClassPath_filters.dtd">
		<pathelement location="${tmp}"/>
		<pathelement location="${distlib}/dtdparser121.jar"/>
	</path>
	
	<target name="filters.dtd"> 
		<copy todir="${distlib}">
			<fileset dir="${lib_filters.dtd}"/>
		</copy>
		<ant antfile="../shared/build_common.xml" inheritAll="true"/>
		<ant antfile="../shared/build_filters.common.xml" inheritAll="true"/>
 		<javac srcdir="${src_filters.dtd}" destdir="${tmp}" classpathref="mainClassPath_filters.dtd"/>
		<copy todir="${tmp}">
			<fileset dir="${src_filters.dtd}" excludes="**/*.java"/>
		</copy>

		<copy file="../../help/help.css" todir="${dist}/help"/>
		<copy todir="${dist}/help/filters/ui/dtd">
			<fileset dir="../../help/filters/ui/dtd" />
		</copy>
		
	</target>

</project>
