<?xml version="1.0"?>
<project name="ui.filters.table" default="ui.filters.table"> 

	<property name="proj_ui.filters.table" value="../../filters/net.sf.okapi.ui.filters.table"/> 
	<property name="src_ui.filters.table" value="${proj_ui.filters.table}/src"/> 
 
	<path id="mainClassPath_ui.filters.table">
		<pathelement location="${tmp}"/>
		<pathelement location="${distlib}/swt.jar"/>
		<pathelement location="${distlib}/okapi-lib.jar"/>
	</path>
	
	<target name="ui.filters.table"> 
		<ant antfile="../shared/build_ui.filters.plaintext.xml" inheritAll="true"/>

 		<javac srcdir="${src_ui.filters.table}" destdir="${tmp}" classpathref="mainClassPath_ui.filters.table"/>

		<copy todir="${tmp}">
			<fileset dir="${src_ui.filters.table}" excludes="**/*.java"/>
		</copy>
	</target>

</project>
