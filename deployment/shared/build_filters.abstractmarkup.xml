<?xml version="1.0"?>
<project name="filters.abstractmarkup" default="filters.abstractmarkup"> 

	<property name="proj_filters.markupfilter" value="../../filters/net.sf.okapi.filters.abstractmarkup"/> 
	<property name="src_filters.markupfilter" value="${proj_filters.abstractmarkup}/src"/> 
	<property name="lib_filters.markupfilter" value="${proj_filters.abstractmarkup}/lib"/> 
 
	<path id="mainClassPath_filters.abstractmarkup">
		<pathelement location="${tmp}"/>
		<pathelement location="${distlib}/jyaml-1.3.jar"/>
		<pathelement location="${distlib}/jericho-html-3.1-dev-5.jar"/>
	</path>
	
	<target name="filters.abstractmarkup"> 
		<copy todir="${distlib}">
			<fileset dir="${lib_filters.abstractmarkup}"/>
		</copy>
		<ant antfile="../shared/build_common.xml" inheritAll="true"/>
		<ant antfile="../shared/build_filters.common.xml" inheritAll="true"/>
 		<javac srcdir="${src_filters.abstractmarkup}" destdir="${tmp}" classpathref="mainClassPath_filters.abstractmarkup"/>
		<copy todir="${tmp}">
			<fileset dir="${src_filters.abstractmarkup}" excludes="**/*.java"/>
		</copy>
	</target>

</project>
